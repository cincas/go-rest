# Base stage
FROM golang:alpine

RUN apk --update add --no-cache --virtual dependency git
# Enable Go Modules
ENV GO111MODULE=on
# Set working directory in container
WORKDIR /go/src/app
# Copy local files to working directory
COPY ./app /go/src/app
# Download dependencies
RUN go mod download

RUN apk del dependency
# Install go tools
RUN go get -d -v ./...
RUN go install -v ./...
# Build app
RUN go build -o app .

EXPOSE 3000
EXPOSE 8080

CMD ["./app"]